@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="~/assets/Login.css" /> 
    <!--Luego ajustar y poner los css y fuentes-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
    <div class="login-page">
        <div class="login-box">
            <div class="login-header">
                <i class="fas fa-user-circle"></i>
                <h2>Iniciar Sesión</h2>
            </div>
            <form class="login-form">
                <div class="form-group input-icon">
                    <i class="fas fa-user"></i>
                    <input type="text" id="username" name="username" placeholder="Usuario" required />
                </div>
                <div class="form-group input-icon">
                    <i class="fas fa-lock"></i>
                    <input type="password" id="password" name="password" placeholder="Contraseña" required />
                </div>
                <button type="submit">Ingresar</button>
            </form>
        </div>
    </div>
</body>
</html>

<script>
    document.querySelector('.login-form').addEventListener('submit', async function (e) {
        e.preventDefault();

        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;

        const esAdmin = 0;

        const response = await fetch("https://localhost:7297/api/usuarios/login", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({
                nombre: username,
                contrasena: password,
                esAdmin: esAdmin
            })
        });

            if (response.ok) {
        const data = await response.json();
        console.log("Login success:", data);

        localStorage.setItem("token", data.token);
        localStorage.setItem("esAdmin", data.esAdmin);
        localStorage.setItem("nombre", data.nombre);
          localStorage.setItem("idUsuario", data.id);
    //si es que entra y genera el token, se establece y guarda este, al igual
            //que identificar si el ingresado esAdmin, o no, para ingresar a la vista correspondiente

        if (data.esAdmin === 1) {
            window.location.href = "/Admin/Index";
        } else {
            window.location.href = "/Users/Index";
        }
    } else {
            alert("Usuario o contraseña incorrectos");
        }
    });
</script> 