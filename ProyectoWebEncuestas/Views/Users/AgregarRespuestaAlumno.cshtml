@{
    Layout = "_Layout";
} 
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container">
    <h2 class="survey-subtitle">Datos del Alumno:</h2>

    <form class="student-form">
        <div class="input-group">
            <i class="fas fa-user icon"></i>
            <input type="text" placeholder="Nombre del alumno" required />
        </div>
        <div class="input-group">
            <i class="fas fa-id-card"></i>
            <input type="text" placeholder="Número de control" required />
        </div>
        <div class="form-buttons">
            <a href="/Users/ResponderPreguntas" class="next-button">Siguiente</a>
            <a href="/Users/Index" class="cancel-button">Cancelar</a>
        </div>
    </form>
</div>

