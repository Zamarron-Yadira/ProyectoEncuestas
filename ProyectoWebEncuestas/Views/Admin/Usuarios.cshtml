@{
    Layout = "_LayoutAdmin";
}

<main class="main-content">
    <section class="active-users">
        <h2>Lista de Usuarios</h2>

        <table class="user-table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Fecha de Registro</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody id="listaUsuarios">
            
            </tbody>
        </table>
    </section>

    <button class="fab-add-user" onclick="goToAgregar()" title="Agregar nuevo usuario">＋</button>
</main>

<script>
    async function cargarUsuarios() {
        try {
            const token = localStorage.getItem("token");
            const response = await fetch("https://apiencuestase8.websitos256.com/api/usuarios/usuarios", {
                headers: {
                    "Authorization": "Bearer " + token
                }
            });

            if (!response.ok) throw new Error(`HTTP ${response.status}`);

            const usuarios = await response.json();
            const tbody = document.getElementById("listaUsuarios");
            tbody.innerHTML = "";

            usuarios.forEach(usuario => {
                const tr = document.createElement("tr");

                tr.innerHTML = `
                    <td>${usuario.nombre}</td>
                    <td>${new Date(usuario.fechaRegistro).toLocaleDateString()}</td>
                    <td>
                        <a href="/Admin/EditarUsuario?id=${usuario.id}" class="edit-btn" title="Editar usuario">✏️</a>
                        <a href="/Admin/EliminarUsuario?id=${usuario.id}" class="delete-btn" title="Eliminar usuario">🗑️</a>
                    </td>
                `;

                tbody.appendChild(tr);
            });

        } catch (error) {
            console.error("Error al cargar usuarios:", error);
        }
    }

    function goToAgregar() {
        window.location.href = `/Admin/AgregarUsuario`;
    }

    cargarUsuarios();
</script>